# RuVector Engine Environment Configuration

# Server
PORT=8080
NODE_ENV=development

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Cloud Storage
GCS_BUCKET=your-project-id-ruvector

# Firestore (optional - for persistent graph storage)
FIRESTORE_DATABASE=(default)

# Cloud SQL with pgvector (optional - for production vector storage)
CLOUD_SQL_CONNECTION_NAME=project:region:instance
CLOUD_SQL_DATABASE=ruvector
CLOUD_SQL_USER=ruvector
CLOUD_SQL_PASSWORD=your-password

# Vector Configuration
VECTOR_DIMENSIONS=128
VECTOR_INDEX_TYPE=ivfflat
VECTOR_INDEX_LISTS=100

# CloudRun Scaling
MIN_INSTANCES=0
MAX_INSTANCES=100
CONCURRENCY=80
MEMORY=2Gi
CPU=2
TIMEOUT=300

# Monitoring
ENABLE_MONITORING=true
